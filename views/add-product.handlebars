<!-- ADD PRODUCT Title -->
<section class="store-light-green-container">
    <div id="store-dark-green-container">
        <div id="stores-title-container">
            <h2 id="stores-title">Add Product</h2>
        </div>
    </div>
</section>


<!-- CREATE A PRODUCT SECTION -->
<section class="large-light-green-container">
    <!-- Form Start -->
    <div class="container">
        <form class="form-to-add">
            <div class="form-group">
                <label for="product_name">WHAT IS THE NAME OF YOUR PRODUCT</label>
                <input type="text" class="form-control" id="product_name" placeholder="Product Name">
            </div>
            <div class="form-group">
                <label for="product_categories">SELECT A PRODUCT CATEGORY</label>
                <select multiple class="form-control" id="product_categories">
                    <option>Vegetables</option>
                    <option>Fruits</option>
                    <option>Meats</option>
                    <option>Eggs</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="product_description">PRODUCT DESCRIPTION</label>
                <textarea class="form-control" id="product_description" rows="3"></textarea>
            </div>
            <button type="submit" class="mb-2">Confirm</button>
        </form>
    </div>
</section>