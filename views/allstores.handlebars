<!-- STORES Template -->
<!-- Stores Page Title -->
<section class="store-light-green-container">
    <div class="container" id="store-dark-green-container">
        <div class="row" id="stores-title-container">
            <h2 id="stores-title">STORES</h2>
        </div>
    </div>
</section>

<!-- Individual Stores -->
{{!-- //TODO: Currently, only three stores populate in handlebars. What's going on with the other three stores? --}}
{{#if allStores.length}}
<section class="large-light-green-container">
    <div class="container">
        <div class="row my-stores justify-content-center">
            {{#each allStores as |store|}}
            <div class="col-6 store-info">
                <img class="description store-img" src="/images/black-square.jpeg" alt="">
                <p class="description">Store Name: <br><span class="my-store-products">{{store.store_name}}</span></p>
                {{!-- //TODO: Currently the Categories displays an object. Get it to display actual categories. --}}
                {{#each store.categories as |category|}}
                <p class="description">Categories: <br><span class="my-store-products">{{category.category_name}}</span></p>
                {{/each}}
                <a class="description" href="#"><button>View Store</button></a>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}