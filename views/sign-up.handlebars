<section class="login">
    <form class="signup-form auth-form">
        <h3>New user? Create an account:</h3>
        <div>
            <label for="username-signup">Username</label>
            <input type="text" id="username-signup" />
        </div>
         <div>
            <label for="email-signup">Email Address</label>
            <input type="text" id="email-signup" />
        </div>
        <div>
            <label for="password-signup">Password</label>
            <input type="password" id="password-signup" />
        </div>
        <div>
            <label for="is-vendor-signup">Check box if signing up as a vendor</label>

            <input type="checkbox" id="is-vendor-signup" name="is-vendor-signup">
        </div>
        <div>
            <button type="submit" class="btn auth-btn">SIGN UP</button>
        </div>
    </form>
</section>

<script src="/javascript/login.js"></script>